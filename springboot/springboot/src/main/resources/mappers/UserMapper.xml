<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.UserDao">
    <!--    delete操作-->
    <delete id="deleteById">DELETE FROM sysuser WHERE id=#{id}</delete>
    <!--    update操作-->
    <update id="update">UPDATE sysuser SET password=#{password},username=#{username} WHERE id=#{id}</update>

    <!--    insert操作-->
    <insert id="insert">INSERT INTO sysuser(username, password)VALUES(#{username},#{password})</insert>

    <!--    select操作-->
    <select id="findall" resultType="com.example.springboot.entity.User">SELECT * FROM sysuser</select>

    <select id="getByID" resultType="com.example.springboot.entity.User">SELECT * FROM sysuser where id=#{id}</select>

    <select id="getByUser" resultType="com.example.springboot.entity.User">SELECT * FROM sysuser where username=#{username} and password=#{password}</select>
</mapper>
